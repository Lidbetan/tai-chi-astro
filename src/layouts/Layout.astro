---
import Footer from "@components/Footer.astro";
import Navbar from "@components/Navbar.astro";
import ViewTransitions from "astro/components/ViewTransitions.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Escuela de Gimnasia y Cultura China - Villa ConstituciÃ³n, Santa Fe, Argentina."
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/assets/favicon32x32.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="stylesheet" href="/src/styles/main.css" />
		<!-- <ViewTransitions /> -->
	</head>
	<body class="flex flex-col min-h-screen relative">
		<div class="z-20 fixed top-0 left-0 right-0 p-4">
			<Navbar />
		</div>

		<!-- IMG BACKGROUND START  -->
		<!-- <div
			class="-z-10 opacity-70 absolute bg-mountainsBg bg-cover bg-no-repeat bg-top w-full min-h-screen flex flex-col flex-grow overflow-hidden"
		>
		</div> -->
		<!-- IMG BACKGROUND END  -->

		<main
			class="z-10 flex-1 pt-16 pb-16 p-4 relative opacity-100 w-11/12 lg:h-8/12"
		>
			<slot />
		</main>

		<div class="z-10 fixed bottom-0 left-0 right-0 p-4">
			<Footer />
		</div>

		<script
			is:inline
			src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
		></script>
		<style is:global>
			body {
				font-family: "Exo-Regular", sans-serif;
			}
			.brand-name {
				font-family: "Philosopher-Bold";
			}
		</style>
	</body>
</html>
