---
import Footer from "@components/Footer.astro";
import Navigation from "@components/Navigation";
import "../styles/main.css";
// import ViewTransitions from "astro/components/ViewTransitions.astro";

//Mountains es true unicamente en la homepage. Se renderiza el fondo de montañas.
interface Props {
	title: string;
	mountains: boolean;
}

const { title, mountains } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Escuela de Gimnasia y Cultura China - Villa Constitución, Santa Fe, Argentina."
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/assets/favicon32x32.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- <ViewTransitions /> -->
	</head>
	<body class="bg-background">
		<div class="min-h-screen grid grid-cols-1 grid-rows-layout">
			<Navigation client:visible />
			<!-- Banner montañas, se renderiza solo en homepage -->
			{
				mountains && (
					<div class="opacity-70 absolute bg-mountainsBg bg-cover bg-no-repeat bg-center w-full h-[150vh] md:h-[115vh] overflow-hidden" />
				)
			}

			<main class="flex-1 z-10 snap-y">
				<slot />
			</main>

			<div>
				<Footer />
			</div>
		</div>

		<script
			is:inline
			src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
		></script>
		<style is:global>
			body {
				font-family: "Exo-Regular", sans-serif;
			}
			.brand-name {
				font-family: "Philosopher-Bold";
			}
		</style>
	</body>
</html>
